<%= form_for @new_comment, as: :comment, url: {controller: :questions, action: 'add_comment' } do |f| %>
  <%= f.hidden_field :question_id, :value => "#{question_id}" %>
  <%= f.hidden_field :parent_id, :value => "#{parent_id}" %>
  <%= f.hidden_field :parent_type, :value => "#{Comment::PARENT_TYPE_BY_KEY[parent_type]}" %>
  <%= f.text_area :content %> </br></br>
  <%= f.submit %>&nbsp;&nbsp;
  <%= link_to 'Back', :back %>
<% end %>