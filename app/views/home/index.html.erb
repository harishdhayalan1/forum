<% flash.each do |type, msg| %>
  <div class="alert alert-error">
    <%= msg %>
  </div>
<% end %>
<div class='container'>
<h1 class="text-center"> Welcome to Forum</h1>
<div class="card card-login text-center">
<%= form_tag('/login', method: 'post') do %>
  <%= label_tag(:email, "Email")%><br>
  <%= email_field_tag "user[email]" %><br>
  <%= label_tag(:password, "Password")%><br>
  <%= password_field_tag "user[password]" %><br>
  </br>
  <%= submit_tag("Login") %>
<%end%>

  </br>
  </br>
<%= link_to('Not a member? Signup!','/signup') %>
</div>
</div>

